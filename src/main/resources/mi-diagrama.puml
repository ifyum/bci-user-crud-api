@startuml
!define ENTITY class

ENTITY <<Spring Controller>> {
  + List<Usuario> listarUsuarios()
  + Usuario obtenerUsuario(int id)
  + void crearUsuario(Usuario usuario)
  + void actualizarUsuario(int id, Usuario usuario)
  + void eliminarUsuario(int id)
}

ENTITY <<Spring Service>> {
  + List<Usuario> listarUsuarios()
  + Usuario obtenerUsuario(int id)
  + void crearUsuario(Usuario usuario)
  + void actualizarUsuario(int id, Usuario usuario)
  + void eliminarUsuario(int id)
}

ENTITY <<Spring Repository>> {
  + List<Usuario> findAll()
  + Optional<Usuario> findById(int id)
  + void save(Usuario usuario)
  + void deleteById(int id)
}

ENTITY <<Database>> {
  Usuario
}

ENTITY <<Spring Boot Application>> {
  + main()
}

Controller ..> Service : Llama a
Service ..> Repository : Utiliza
Repository ..> Database : Accede a
@enduml
